s_permalink_article_rep
  article
    h1 [##_article_rep_title_##]
    div.meta
      span.date [##_article_rep_date_year_##].[##_article_rep_date_month_##].[##_article_rep_date_day_##].
      a.category(href="[##_article_rep_category_link_##]") [##_article_rep_category_##]
    div.tags
      s_tag_label [##_tag_label_rep_##]
    div.body [##_article_rep_desc_##]
    include Comment

style.
  article {
    color: var(--color);
    padding: 1em 2em;
    max-width: 750px;
    margin: auto;
  }
  article > .meta{
    margin: 1em 0;
    display: flex;
    flex-flow: row nowrap;
    justify-content: space-between;
    color: var(--color-blur);
  }
  article > .meta a {
    display: inline-block;
    text-decoration: none;
    color: var(--color-blur);
  }
  article > .tags a {
    display: inline-block;
    text-decoration: none;
    color: var(--color-blur);
  }
  article > .tags a::before {
    content: "#";
    margin-right: 2px;
  }
  article > .body {
    padding: 0.5rem;
  }
  article > .body h2,
  article > .body h3 {
    margin-top: 1em;
    margin-bottom: 0.6em;
  }
  article > .body kbd {
    font-weight: bold;
    font-size: 0.8em;
    vertical-align: middle;
    margin: 0 0.3rem;
    border: 1px solid var(--color-background);
    border-radius: 4px;
    display: inline-block;
    padding: 1px 8px;
    background: linear-gradient(178deg, var(--color-background), var(--color-background), var(--color-background), var(--color-border));
    box-shadow: 1px 1px 2px #777;
  }
  article > .body p {
    line-height: 2em;
    margin-top: 0.8em;
  }
  article > .body p code {
    display: inline-block;
    background-color: var(--color-border);
    padding: 0.0rem 0.3rem 0.15rem 0.3rem;
    height: 1.65em;
  }
  article > .body p a,
  article > .body li a {
    color: var(--color-href);
  }
  article > .body ul,
  article > .body ol {
    margin-left: 1.5em;
  }
  article > .body blockquote {
    background-color: var(--color-box);
    padding: 0.5rem 1rem;
    border-radius: 0.2rem;
    margin: 1em 0 !important;
  }
  article > .body blockquote p {
    color: var(--color-blur);
  }
  article > .body pre {
    margin-top: 1em;
    margin-bottom: 1em;
  }
  article > .body .imageblock {
    margin-top: 1em;
    margin-bottom: 1em;
  }
  article > .body .fileblock .filename .name {
    color: var(--color);
  }
  article > .body .fileblock .size {
    color: var(--color-blur) !important;
  }
  @media (prefers-color-scheme: dark) {
    article > .body .fileblock .image {
      filter:  invert(1);
    }
  }
  article > .body .another_category {
    padding: 0;
  }
  article > .body .another_category table{
    margin: 0 !important;
  }
  article > .body .another_category h4,
  article > .body .another_category th,
  article > .body .another_category td {
    padding: 6px 10px !important;
    font-size: 0.9em !important;
  }
  article > .body .another_category h4 {
    font-size: 1em !important;
  }
  article > .body .another_category tr:nth-child(2n) {
    background-color: rgba(255, 255, 255, .1);
  }

script.
  // 댓글 본문 자동 높이조절
  function resize(obj) {
    obj.style.height = "1px";
    obj.style.height = (12+obj.scrollHeight)+"px";
  }
  // 단락 공백 제거 클래스 삭제
  let conteiner = document.querySelector(".tt_article_useless_p_margin")
  if (conteiner) conteiner.classList.remove("tt_article_useless_p_margin");
