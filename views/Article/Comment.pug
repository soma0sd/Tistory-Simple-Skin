style.
  .comment .comment-new {
    margin: 1rem 0 3rem 0;
    display: flex;
    flex-flow: row wrap;
    justify-content: space-between;
    gap: 0.5rem 1rem;
  }
  .comment .comment-new .input-group {
    display: inline-block;
  }
  .comment .comment-new input {
    background-color: var(--color-blur);
    box-sizing: border-box;
    border-radius: 4px;
    font-size: 1rem;
  }
  .comment .comment-new label {
    margin: 0 0.5rem;
  }
  .comment .comment-new textarea {
    width: 100%;
    box-sizing: border-box;
    padding: 0.5rem;
    background-color: var(--color-blur);
    overflow:visible;
    resize: none;
  }
  .comment .comment-new input[type="submit"] {
    width: 80px;
    padding: 4px 0;
    text-align: center;
    font-size: 1.1rem;
    background-color: var(--color-box);
    color: var(--color);
    border: none;
    border-radius: .2rem;
    float: right;
  }
  .comment .comment-list {
    list-style: none;
  }
  .comment .comment-list .reply {
    display: grid;
    grid-template-columns: auto 1fr repeat(3, auto);
    grid-template-rows: auto 1fr;
    margin: 0.8rem 0 0.5rem 0;
    padding: 0.5rem;
    border-radius: 4px;
  }
  .comment .comment-list a {
    color: var(--color);
    text-decoration: none;
  }
  .comment .comment-list .name {
    font-weight: bold;
  }
  .comment .comment-list .date a,
  .comment .comment-list a[href="#"] {
    display: inline-block;
    padding: 2px 4px;
    border-radius: 2px;
    margin: 0 3px;
    text-decoration: none;
    background-color: var(--color-box);
    color: var(--color);
  }
  .comment .comment-list img.logo {
    width: 45px;
    margin-right: 0.4rem;
    grid-area: 1 / 1 / 3 / 2;
    border-radius: 9px;
  }
  .comment .comment-list p.body {
    grid-area: 2 / 2 / 3 / 6;
    color: var(--color-blur);
  }
  .comment .comment-list .rp_general {
    background-color: rgba(100, 181, 246, 0.1);
  }
  .comment .comment-list .rp_secret {
    background-color: rgba(186, 104, 200, 0.1);
  }
